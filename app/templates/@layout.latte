	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
	<link rel="stylesheet" media="screen,projection,tv" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/smoothness/jquery-ui.css">
	<script type="text/javascript" src="{$basePath}/js/netteForms.js"></script>
    
	{if isset($editor)}
	<script type="text/javascript" src="{$basePath}/js/tiny_mce/jquery.tinymce.js"></script>
	{/if}
	
	<script type='text/javascript' src='{$basePath}/js/scroll/jquery.scrollTo-1.4.3.1-min.js'></script>
	<script type='text/javascript' src='{$basePath}/js/scroll/jquery.serialScroll-1.2.2-min.js'></script>
        
	<script>
	$(function(){
		$('#header').serialScroll({
			items:'li',
			duration:4000,
			force:true,
			axis:'x',
			easing:'linear',
			lazy:false,// NOTE: it's set to true, meaning you can add/remove/reorder items and the changes are taken into account.
			interval:1, // yeah! I now added auto-scrolling
			step:1 // scroll 2 each time
		});
	});
	</script>
	{if $admin}
	<link rel="stylesheet" href="{$basePath}/css/adminform.css" type="text/css" media="screen">
	<script type="text/javascript" src="{$basePath}/js/adminform.js"></script>
	<script type="text/javascript" src="{$basePath}/js/jquery.confirm-1.3.js"></script>

	<script type="text/javascript">
	$(function() {
		{if isset($activate_admin)}$().adminform('show');{/if}
		$("a.admin").adminform();
		$('a.delete').confirm({
			msg:'',
			buttons:{ ok:"<img src='{!$basePath}/images/confirm2.png'>", cancel:"<img src='{!$basePath}/images/cancel2.png'>", separator:'', wrapper:'<a href="#" class="ask-del"></a>' }
		});
	});
	</script>
	{/if}
	{block head}{/block}
</head>
<body>
{block admin}{/block}
<div id="art-page-background-glare-wrapper">
    <div id="art-page-background-glare"></div>
</div>
<div id="art-main">
    <div class="cleared reset-box"></div>
    <div class="art-header">
        <div class="art-header-position">
            <div class="art-header-wrapper">
                <div id="header">
		    <div class="header-left">
			<img src="{$basePath}/images/header-left.png" alt="Error" />
		    </div>
		    <div class="header-right">
			<img src="{$basePath}/images/header-right.png" alt="Error" />
		    </div>
                    <div class="scroll-container">
                    <ul>
						{foreach $presentation as $pic}
						<li>
							<img src="{$basePath}/files/galery/{$pic->name}" n:class="$iterator->first?first" alt="Error" />
							{if !$iterator->last}
							<img src="{$basePath}/images/line_header.png" style="width:1px; height:100%;" alt="Error" />
							{/if}
						</li>
						{/foreach}
						{*
                        <li>
			    <img src="{$basePath}/images/bagr.png" class="first" alt="Error" />
			    <img src="{$basePath}/images/line_header.png" style="width:1px; height:100%;" alt="Error" />
			</li>
                        <li>
			    <img src="{$basePath}/images/bobik.png" alt="Error" />
			    <img src="{$basePath}/images/line_header.png" style="width:1px; height:100%;" alt="Error" />
			</li>
                        <li>
			    <img src="{$basePath}/images/bagr.png" alt="Error" />
			    <img src="{$basePath}/images/line_header.png" style="width:1px; height:100%;" alt="Error" />
			</li>
                        <li>
			    <img src="{$basePath}/images/bobik.png" alt="Error" />
			    <img src="{$basePath}/images/line_header.png" style="width:1px; height:100%;" alt="Error" />
			</li>
                        <li>
			    <img src="{$basePath}/images/bagr.png" alt="Error" />
			    <img src="{$basePath}/images/line_header.png" style="width:1px; height:100%;" alt="Error" />
			</li>
